@model IEnumerable<SpelAvondApp.Domain.Models.BordspellenAvond>

<h1 class="my-3">Avonden Waarbij Ik Ben Ingeschreven</h1>

<table class="table table-bordered table-striped">
    <thead class="table-primary">
        <tr>
            <th>Datum en Tijd</th>
            <th>Adres</th>
            <th>Organisator</th> 
            <th>Max Spelers</th>
            <th>18+</th>
            <th>Acties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var avond in Model)
        {
            <tr>
                <td>@avond.Datum.ToString("dd-MM-yyyy HH:mm")</td>
                <td>@avond.Adres</td>
                <td>@avond.Organisator?.UserName</td> 
                <td>@avond.MaxAantalSpelers</td>
                <td>
                    @if (avond.Is18Plus)
                    {
                        <span class="badge bg-danger">Ja</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Nee</span>
                    }
                </td>
                <td>
                    <!-- Knop om een review achter te laten -->
                    <a asp-controller="Reviews" asp-action="Create" asp-route-bordspellenAvondId="@avond.Id" class="btn btn-orange btn-sm">
                        <i class="bi bi-pencil"></i> Review Achterlaten
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
