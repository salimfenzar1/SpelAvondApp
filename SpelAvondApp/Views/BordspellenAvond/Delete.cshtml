@model SpelAvondApp.Domain.Models.BordspellenAvond

@{
    ViewData["Title"] = "Bordspellenavond Verwijderen";
}

<h1>@ViewData["Title"]</h1>

<h3>Weet je zeker dat je deze bordspellenavond wilt verwijderen?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Datum</dt>
        <dd class="col-sm-10">@Model.Datum.ToString("dd-MM-yyyy HH:mm")</dd>

        <dt class="col-sm-2">Adres</dt>
        <dd class="col-sm-10">@Model.Adres</dd>

        <dt class="col-sm-2">Maximaal Aantal Spelers</dt>
        <dd class="col-sm-10">@Model.MaxAantalSpelers</dd>

        <dt class="col-sm-2">Alleen 18+</dt>
        <dd class="col-sm-10">@Model.Is18Plus</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Verwijderen</button>
        <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
    </form>
</div>
