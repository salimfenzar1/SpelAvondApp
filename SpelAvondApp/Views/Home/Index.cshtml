@using SpelAvondApp.Domain.Models
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@{
    ViewData["Title"] = "Welkom bij SpelAvondApp";
}

<div class="container mt-5 text-center">
    <h1 class="display-4">Welkom bij SpelAvondApp!</h1>
    <p class="lead">Organiseer of neem deel aan de leukste bordspellenavonden met je vrienden!</p>


    @if (SignInManager.IsSignedIn(User))
    {
        <div class="row mt-4">
            <div class="col-md-6">
                <div class="card">
                    <img src="~/images/boardgames.jpg" class="card-img-top" alt="Bordspellen" />
                    <div style="background-color:#A3CFF0" class="card-body">
                        <h5 class="card-title">Bekijk Bordspellen</h5>
                        <p class="card-text">Ontdek alle beschikbare bordspellen die je kunt spelen tijdens een bordspellenavond. Klik hieronder om de lijst te bekijken en je favorieten te kiezen!</p>
                        <a style="background-color:#FFA500; color:black !important;" href="/Bordspel/Index" class="btn btn-primary">Bordspellen Lijst</a>
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card ">
                    <img src="~/images/gamenight.jpeg" class="card-img-top" alt="Bordspellenavonden" />
                    <div style="background-color:#A3CFF0" class="card-body">
                        <h5 class="card-title">Bekijk Bordspellenavonden</h5>
                        <p class="card-text">Wil je een gezellige avond plannen met je vrienden of deelnemen aan een bestaande avond? Klik hier om alle geplande avonden te bekijken!</p>
                        <a style="background-color:#FFA500; color:black !important;" href="/BordspellenAvond/Index" class="btn btn-primary">Bordspellenavonden Lijst</a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Als de gebruiker niet is ingelogd, toon een bericht -->
        <div class="alert alert-tab" role="alert">
            <h4 class="alert-heading">Let op!</h4>
            <p>Je moet ingelogd zijn om toegang te krijgen tot de lijst van bordspellen en bordspellenavonden.</p>
            <hr>
            <p class="mb-0">Klik <a href="/Identity/Account/Login" style="color:#1F4E79" class="alert-link">hier</a> om in te loggen of <a href="/Identity/Account/Register" style="color:#1F4E79" class="alert-link">hier</a> om een account aan te maken.</p>
        </div>
    }

    <div  class="row mt-5">
        <div class="col-md-12">
            <div style="background-color: #1F4E79; color:#FFA500" class="alert" role="alert">
                <strong>Tip:</strong> Wil je zelf een bordspellenavond organiseren? Log in en maak een nieuwe avond aan!
            </div>
        </div>
    </div>
</div>

<!-- Stylesheet for better presentation -->
<style>
    .container {
        max-width: 1200px;
    }

    .card {
        transition: transform 0.2s ease;
    }

        .card:hover {
            transform: scale(1.05);
        }

    .card-img-top {
        height: 250px;
        object-fit: cover;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>
