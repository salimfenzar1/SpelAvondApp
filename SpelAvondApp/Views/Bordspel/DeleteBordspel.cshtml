@model SpelAvondApp.Domain.Models.Bordspel

@{
    ViewData["Title"] = "Bordspel Verwijderen";
}

<h1>@ViewData["Title"]</h1>

<h3>Weet je zeker dat je dit bordspel wilt verwijderen?</h3>

<div>
    <h4>@Model.Naam</h4>
    <p>@Model.Beschrijving</p>
    <p><strong>Genre:</strong> @Model.Genre</p>
    <p><strong>Soort Spel:</strong> @Model.SoortSpel</p>
    <p><strong>18+:</strong> @(Model.Is18Plus ? "Ja" : "Nee")</p>
</div>

<form asp-action="DeleteBordspel" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Verwijderen</button>
    <a asp-action="Index" class="btn btn-secondary">Annuleren</a>
</form>
